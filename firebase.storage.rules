rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // 允許所有用戶讀取頭像
    match /avatars/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 代禱圖片 - 允許公開讀取，授權用戶寫入
    match /prayer-images/public/user-uploads/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 代禱圖片 - 訪客上傳
    match /prayer-images/public/guest-uploads/{fileName} {
      allow read: if true;
      allow write: if true; // 允許任何人上傳到訪客目錄
    }
    
    // 回應圖片 - 允許公開讀取，授權用戶寫入
    match /response-images/public/user-uploads/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 回應圖片 - 訪客上傳
    match /response-images/public/guest-uploads/{fileName} {
      allow read: if true;
      allow write: if true; // 允許任何人上傳到訪客目錄
    }
    
    // 測試目錄 - 允許已認證用戶上傳
    match /test/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 默認規則：拒絕所有未明確允許的請求
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 